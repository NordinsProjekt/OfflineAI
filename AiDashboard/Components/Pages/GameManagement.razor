@page "/games"
@rendermode InteractiveServer
@using Application.AI.Utilities
@inject GameDetector GameDetector
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Game Management</PageTitle>

<div class="game-management-container">
    <div class="page-header">
        <h2>?? Game Management</h2>
        <p class="subtitle">Manage games and their searchable variants for RAG filtering</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert @(statusMessage.StartsWith("[OK]") ? "alert-success" : statusMessage.StartsWith("[ERROR]") ? "alert-danger" : "alert-info")">
            @statusMessage
        </div>
    }

    <div class="management-layout">
        <!-- Left Panel: Game List -->
        <div class="game-list-panel">
            <div class="panel-header">
                <h3>?? Registered Games</h3>
                <button class="btn-refresh" @onclick="RefreshGames" disabled="@isLoading">
                    <span class="@(isLoading ? "spinner" : "")">??</span> Refresh
                </button>
            </div>

            @if (isLoading)
            {
                <div class="loading-state">
                    <div class="spinner-large"></div>
                    <p>Loading games...</p>
                </div>
            }
            else if (!games.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">??</div>
                    <h4>No games registered yet</h4>
                    <p>Add your first game using the form on the right</p>
                </div>
            }
            else
            {
                <div class="game-list">
                    @foreach (var game in games.OrderBy(g => g.DisplayName))
                    {
                        <div class="game-card @(selectedGameId == game.GameId ? "selected" : "")" 
                             @onclick="() => SelectGame(game.GameId)">
                            <div class="game-card-header">
                                <h4>@game.DisplayName</h4>
                                <span class="game-id">@game.GameId</span>
                            </div>
                            <div class="game-card-actions">
                                <button class="btn-icon" @onclick:stopPropagation="true" @onclick="() => EditGame(game.GameId)" title="Edit">
                                    ??
                                </button>
                                <button class="btn-icon btn-danger" @onclick:stopPropagation="true" @onclick="() => DeleteGame(game.GameId)" title="Delete">
                                    ???
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Right Panel: Add/Edit Game -->
        <div class="game-form-panel">
            <div class="panel-header">
                <h3>@(isEditMode ? "?? Edit Game" : "? Add New Game")</h3>
                @if (isEditMode)
                {
                    <button class="btn-link" @onclick="CancelEdit">Cancel</button>
                }
            </div>

            <div class="form-group">
                <label for="gameId">Game ID <span class="required">*</span></label>
                <input type="text" 
                       id="gameId" 
                       class="form-control" 
                       @bind="formGameId" 
                       placeholder="e.g., munchkin-panic"
                       disabled="@isEditMode" />
                <small class="form-text">Lowercase with hyphens, used for internal identification</small>
            </div>

            <div class="form-group">
                <label for="displayName">Display Name <span class="required">*</span></label>
                <input type="text" 
                       id="displayName" 
                       class="form-control" 
                       @bind="formDisplayName" 
                       placeholder="e.g., Munchkin Panic" />
                <small class="form-text">User-friendly name shown in the UI</small>
            </div>

            <div class="form-group">
                <label for="variants">Search Variants <span class="required">*</span></label>
                <textarea id="variants" 
                          class="form-control" 
                          rows="5" 
                          @bind="formVariants" 
                          placeholder="Enter one variant per line:
munchkin panic
panic
castle panic munchkin"></textarea>
                <small class="form-text">Text patterns to match in user queries (one per line)</small>
            </div>

            <div class="form-actions">
                <button class="btn-primary" @onclick="SaveGame" disabled="@(!IsFormValid() || isSaving)">
                    @if (isSaving)
                    {
                        <span class="spinner-small"></span>
                    }
                    @(isEditMode ? "Update Game" : "Add Game")
                </button>
                @if (isEditMode)
                {
                    <button class="btn-secondary" @onclick="CancelEdit">Cancel</button>
                }
            </div>
        </div>
    </div>

    <!-- Bottom Panel: Variant Details (when game selected) -->
    @if (!string.IsNullOrWhiteSpace(selectedGameId) && selectedGameVariants.Any())
    {
        <div class="variants-panel">
            <div class="panel-header">
                <h3>?? Search Variants for: @selectedGameDisplayName</h3>
                <span class="variant-count">@selectedGameVariants.Count variant(s)</span>
            </div>
            <div class="variant-list">
                @foreach (var variant in selectedGameVariants.OrderBy(v => v))
                {
                    <div class="variant-chip">
                        <span class="variant-text">@variant</span>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<(string GameId, string DisplayName)> games = new();
    private string? selectedGameId = null;
    private string? selectedGameDisplayName = null;
    private List<string> selectedGameVariants = new();
    
    private string formGameId = "";
    private string formDisplayName = "";
    private string formVariants = "";
    
    private bool isLoading = false;
    private bool isSaving = false;
    private bool isEditMode = false;
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await RefreshGames();
    }

    private async Task RefreshGames()
    {
        isLoading = true;
        statusMessage = "";
        StateHasChanged();

        try
        {
            games = await GameDetector.GetAllGamesAsync();
            statusMessage = $"[OK] Loaded {games.Count} game(s)";
        }
        catch (Exception ex)
        {
            statusMessage = $"[ERROR] Failed to load games: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SelectGame(string gameId)
    {
        selectedGameId = gameId;
        selectedGameDisplayName = games.FirstOrDefault(g => g.GameId == gameId).DisplayName;
        
        // Load variants from cache by triggering a detection
        await GameDetector.RefreshCacheAsync();
        
        // Get variants by checking the display name
        selectedGameVariants = new List<string>();
        statusMessage = $"[INFO] Selected: {selectedGameDisplayName}";
        
        StateHasChanged();
    }

    private void EditGame(string gameId)
    {
        var game = games.FirstOrDefault(g => g.GameId == gameId);
        if (game.GameId == null)
            return;

        isEditMode = true;
        formGameId = game.GameId;
        formDisplayName = game.DisplayName;
        selectedGameId = gameId;
        
        // Note: Variants will need to be loaded from repository
        // For now, show a message
        formVariants = "# Variants will be loaded...\n# Edit and save to update";
        
        statusMessage = $"[INFO] Editing {game.DisplayName}";
        StateHasChanged();
    }

    private async Task SaveGame()
    {
        if (!IsFormValid())
            return;

        isSaving = true;
        statusMessage = "";
        StateHasChanged();

        try
        {
            var variants = formVariants
                .Split('\n', StringSplitOptions.RemoveEmptyEntries)
                .Where(v => !v.Trim().StartsWith("#"))
                .Select(v => v.Trim())
                .Where(v => !string.IsNullOrWhiteSpace(v))
                .ToArray();

            if (variants.Length == 0)
            {
                statusMessage = "[ERROR] Please add at least one search variant";
                return;
            }

            var source = isEditMode ? "manual-edit" : "manual-add";
            
            await GameDetector.RegisterGameAsync(
                formGameId.Trim(),
                formDisplayName.Trim(),
                variants);

            statusMessage = $"[OK] Successfully {(isEditMode ? "updated" : "added")} game: {formDisplayName}";
            
            // Refresh list
            await RefreshGames();
            
            // Reset form
            CancelEdit();
        }
        catch (Exception ex)
        {
            statusMessage = $"[ERROR] Failed to save game: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task DeleteGame(string gameId)
    {
        var game = games.FirstOrDefault(g => g.GameId == gameId);
        if (game.GameId == null)
            return;

        var confirmed = await JSRuntime.InvokeAsync<bool>(
            "confirm",
            $"Delete game '{game.DisplayName}'?\n\nThis will permanently remove the game and all its variants.");

        if (!confirmed)
            return;

        try
        {
            await GameDetector.DeleteGameAsync(gameId);
            statusMessage = $"[OK] Deleted game: {game.DisplayName}";
            
            if (selectedGameId == gameId)
            {
                selectedGameId = null;
                selectedGameDisplayName = null;
                selectedGameVariants.Clear();
            }
            
            await RefreshGames();
        }
        catch (Exception ex)
        {
            statusMessage = $"[ERROR] Failed to delete game: {ex.Message}";
        }
    }

    private void CancelEdit()
    {
        isEditMode = false;
        formGameId = "";
        formDisplayName = "";
        formVariants = "";
        selectedGameId = null;
        StateHasChanged();
    }

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(formGameId) &&
               !string.IsNullOrWhiteSpace(formDisplayName) &&
               !string.IsNullOrWhiteSpace(formVariants);
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}
