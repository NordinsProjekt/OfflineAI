@inject DashboardState Dashboard

<section class="oa-card">
    <div class="oa-card-title">RAG Knowledge Base</div>
    
    @if (!string.IsNullOrWhiteSpace(Dashboard.StatusMessage))
    {
        <div class="oa-status-message">@Dashboard.StatusMessage</div>
    }
    
    <div class="oa-info-text">
        Select a collection in the Collections section to use for RAG queries.
        The active collection is automatically loaded.
    </div>
</section>
