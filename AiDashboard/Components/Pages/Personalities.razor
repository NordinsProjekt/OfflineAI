@page "/personalities"
@inject DashboardState Dashboard
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Bot Personalities</PageTitle>

<div class="personalities-page">
    <div class="page-header">
        <h1>?? Bot Personalities</h1>
        <p>Manage different bot personalities for specialized interactions</p>
    </div>

    @if (Dashboard.PersonalityService == null)
    {
        <div class="alert alert-warning">
            <strong>?? Personality service not available</strong>
            <p>Please check your configuration.</p>
        </div>
    }
    else
    {
        <div class="actions-bar">
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                ? Create New Personality
            </button>
            <button class="btn btn-secondary" @onclick="RefreshPersonalities">
                ?? Refresh
            </button>
        </div>

        @if (personalities.Count == 0)
        {
            <div class="alert alert-info">
                <strong>?? No personalities found</strong>
                <p>Create your first bot personality to get started!</p>
            </div>
        }
        else
        {
            <!-- Group by category -->
            @foreach (var category in personalities.GroupBy(p => p.Category).OrderBy(g => g.Key))
            {
                <div class="personality-category">
                    <h2>@category.Key</h2>
                    <div class="personality-grid">
                        @foreach (var personality in category)
                        {
                            <div class="personality-card @(personality.IsActive ? "" : "inactive")">
                                <div class="card-header">
                                    <div class="card-title">
                                        @if (!string.IsNullOrWhiteSpace(personality.Icon))
                                        {
                                            <span class="personality-icon">@personality.Icon</span>
                                        }
                                        <h3>@personality.DisplayName</h3>
                                    </div>
                                    <div class="card-actions">
                                        <button class="btn-icon" title="Edit" @onclick="() => EditPersonality(personality)">??</button>
                                        <button class="btn-icon" title="Delete" @onclick="() => DeletePersonality(personality)">???</button>
                                    </div>
                                </div>
                                <p class="personality-description">@personality.Description</p>
                                <div class="personality-details">
                                    <div class="detail-item">
                                        <strong>ID:</strong> @personality.PersonalityId
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(personality.DefaultCollection))
                                    {
                                        <div class="detail-item">
                                            <strong>Collection:</strong> @personality.DefaultCollection
                                        </div>
                                    }
                                    @if (personality.Temperature.HasValue)
                                    {
                                        <div class="detail-item">
                                            <strong>Temperature:</strong> @personality.Temperature.Value.ToString("F1")
                                        </div>
                                    }
                                    <div class="detail-item">
                                        <strong>RAG:</strong> @(personality.EnableRag ? "? Enabled" : "? Disabled")
                                    </div>
                                    <div class="detail-item">
                                        <strong>Status:</strong> @(personality.IsActive ? "? Active" : "? Inactive")
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-block" @onclick="() => SelectPersonality(personality)">
                                    Use This Bot
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    }

    <!-- Status message -->
    @if (!string.IsNullOrWhiteSpace(Dashboard.StatusMessage))
    {
        <div class="status-message">@Dashboard.StatusMessage</div>
    }
</div>

