        border-radius: 4px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        max-width: 400px;
        word-wrap: break-word;
    }
</style>

@code {
    private List<Entities.BotPersonalityEntity> personalities = new();

    protected override async Task OnInitializedAsync()
    {
        Dashboard.OnChange += HandleStateChanged;
        await RefreshPersonalities();
    }

    private void HandleStateChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Dashboard.OnChange -= HandleStateChanged;
    }

    private async Task RefreshPersonalities()
    {
        if (Dashboard.PersonalityService != null)
        {
            personalities = await Dashboard.PersonalityService.GetAllPersonalitiesAsync(includeInactive: true);
        }
        await InvokeAsync(StateHasChanged);
    }

    private void ShowCreateModal()
    {
        // TODO: Implement create modal
        Dashboard.StatusMessage = "[INFO] Create personality feature coming soon!";
    }

    private void EditPersonality(Entities.BotPersonalityEntity personality)
    {
        // TODO: Implement edit modal
        Dashboard.StatusMessage = $"[INFO] Edit '{personality.DisplayName}' - feature coming soon!";
    }

    private async Task DeletePersonality(Entities.BotPersonalityEntity personality)
    {
        if (Dashboard.PersonalityService != null)
        {
            var (success, message) = await Dashboard.PersonalityService.DeletePersonalityAsync(personality.PersonalityId);
            Dashboard.StatusMessage = success ? $"[OK] {message}" : $"[ERROR] {message}";
            
            if (success)
            {
                await RefreshPersonalities();
            }
        }
    }

    private async Task SelectPersonality(Entities.BotPersonalityEntity personality)
    {
        await Dashboard.SelectPersonalityAsync(personality.PersonalityId);
        Navigation.NavigateTo("/");
    }
}
